<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--Production configuration - strict security -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configurations for API servers -->
    <!-- Uncomment and configure when you have a backend API -->
    <!--
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.yourdomain.com</domain>
        <pin-set expiration="2026-01-01">
            <pin digest="SHA-256">your-certificate-pin-here</pin>
            <pin digest="SHA-256">your-backup-certificate-pin-here</pin>
        </pin-set>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    -->

    <!-- Debug configuration - only allow cleartext for localhost during development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
